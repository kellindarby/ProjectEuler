#include <stdio.h>

int paliCheck(int input);

int main(void) {

  int input = 0;
  printf("Input number:");
  scanf("%d", &input);

  if(numFlip(input))
  {
    printf("%d is a palindrome\n", input);
  }
  else
    printf("%d is not a palindrome\n", input);
  return 0;
}

int paliCheck(int input)
{
  int inputLeng = 0;
  int temp = input;

  for(int i = 0; temp > 0; i++)
  {
    temp/=10;
    inputLeng++;
  }

  int flipped[inputLeng];
  int init[inputLeng];

  for(int i = 0; i < inputLeng; i++)
  {
    flipped[i] = input%10;
    init[inputLeng-1-i] = input%10;
    input/=10;
  }

  for(int i = 0; i < inputLeng; i++)
  {
    if (init[i] != flipped[i])
    {
      return 0;
    }
    return 1;
  }
  return 0;
}
